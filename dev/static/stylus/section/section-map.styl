.map
  display flex
  min-height: 70rem
  &__container
    margin-top auto
  &__object
    min-height 650px

.form-container
  position relative

.form
  background #fff
  box-shadow: 0 4px 43px rgba(0, 0, 0, 0.14)
  position absolute
  padding 0 20px
  z-index: 1
.form-group
  padding-left calc(8%)
  padding-right calc(8%)
  padding-top calc(10%)
.form-label  
	font-size 18px
	margin 0 0 25px 0 
	display block
	opacity 1
.form-label--checkbox
  position relative
.form-control 
  border-color text
  border-width 0 0 1px 0
  border-radius 0
  border-style none none solid none
  box-shadow none
  width 100%	
.form-control:focus 
	box-shadow none
	border-color #9a0000

.form-title
  padding-top 40px
  h3
    font-family PtFont
    font-weight normal
    padding: 0 20px
    text-align center
  &-desc
    display block
    font-size 18px
.label
  font-size 14px
  padding-left 15px
  &.desctop
    color #003 
    cursor pointer
  &-mobile
    color #003
    cursor pointer
.general-button--mod
  display block
  text-align center
  &:hover
    background-color #cc0000
    background-image none
  &:active
    background-color #a31c1d
    background-image none
.padding
  padding-top 10px
.text-conf
  color: #000030
  text-decoration underline
.text-conf,
.form-conf
  font-size 13px
.form-conf
  padding-left: calc(8%);
  padding-right: calc(8%);
  padding-top: calc(5%);
  p
    padding-bottom 40px
::-webkit-input-placeholder 
  opacity 0
::-moz-placeholder
  opacity  0
:-moz-placeholder
  opacity 0
:-ms-input-placeholder
  opacity 0

@media (min-width: 320px) and (max-width: 412px)
  .checkbox-custom
    top 25%
@media (min-width: 320px) and (max-width: 768px)
  .general-button--mod
    max-width: 310px
    margin: 0 auto 40px
    margin-top: 40px
    margin-bottom: 0

@media (min-width: 320px) and (max-width: 480px)
  .form
    min-width 100vw
    &-title
      h3 
        font-size 28px
    &-title-desc
      display none
  .label.desctop
    display none
  .label-mobile
    font-size 14px
    padding-left 15px
  .map
    min-height: 1120px
    &__container
      width 100% 
@media (min-width: 481px) and (max-width: 768px)
  .form
    min-width 80vw
    margin 0 55px
    &-title
      h3 
        font-size 28px
    &-title-desc
      display none
  .label.desctop
    display none
  .label-mobile
    font-size 14px
    padding-left 15px
  .map__container
    width 100% 
  .label-mobile
    display none
  .label.desctop
    display block
    font-size 14px
    margin-left 15px
  .checkbox-custom
    top 25%

@media (min-width: 613px)
  .checkbox-custom
    top 6px
@media (min-width: 650px)
  .checkbox-custom
    top 6px
  .label.desctop
    span
      display block
@media (min-width: 769px)
  .form
    max-width 640px
    min-width: 550px
    top 2%
    left 30%
    &-title
      h3 
        font-size 36px
    &-title-desc
      display block
      padding-left: calc(8%)
      padding-right: calc(8%)
      padding-top: 5px
  .label.desctop
    display block
  .label-mobile
    display none
  .map
    min-height 720px
    &__container
      flex 0 1 60%
    &__object
      height calc(100% - 70px)
  .label-mobile
    display none
  .label.desctop
    display block
    font-size 14px
    margin-left 15px
  .form-container
    flex: 0 0 40%
  .general-button--mod
    max-width 310px
    margin-left: calc(8%)

    
    

  
  

