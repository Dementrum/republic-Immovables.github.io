.our-strength
  &__container
    col(flex-start, center)
  
  &__title
    margin 70px 0 60px 0
    font-family PtFont
    font-size 36px
    font-weight normal
  &__nav
    display flex
    flex-wrap wrap
  &__item
    text-align center
    p
      line-height 1.4
      flex-direction: column
      display flex
.border 
  display block
  size(70px, 2px)
  background-color #cc0000
  margin: 14px auto 21px
  text-align center
.icon
  &-skyline,
  &-house-key,
  &-placeholder,
  &-contract
    fill #000030
@media (min-width: 320px) and (max-width: 479px)
  .our-strength
    &__item
      flex 0 1 49% 
    &__container 
      box-shadow: inset 6px 4px 72px #fafafa
@media (min-width: 320px) and (max-width: 767px)
  .our-strength
    &__title
      display none
      &--mobile
        font-family PtFont
        font-weight normal
        font-size 28px
        padding-top 50px
    &__nav
      margin-top 30px
      justify-content space-between
      min-height 370px
    &__item
      p 
        font-size 15px
  .icon
    &-skyline,
    &-house-key,
    &-placeholder,
    &-contract
      size(55px, 60px)
@media (min-width: 451px) and (max-width: 500px)
  .our-strength
    margin-top -75px
@media (min-width: 480px) and (max-width: 767px)
  .our-strength
    &__item
      flex 0 1 35%
    &__nav
      justify-content space-around
@media (min-width: 768px) and (max-width: 1169px)                            
  .our-strength
    &__container
      min-height 450px
    &__item
      display flex
      flex: 0 1 43%
      p 
        text-align left
        padding-top 10px
    &__title--mobile
      display none
    &__nav
      justify-content space-around
      min-height 200px
    .icon
      &-skyline,
      &-house-key,
      &-placeholder,
      &-contract    
        size(65px, 55px)
    .container-icon
      padding-right 10px
@media (min-width: 824px) and (max-width: 1034px)
  .our-strength__item
    padding-right calc(4%)
@media (min-width: 1035px) and (max-width: 1185px)
  .our-strength__item
    padding-right calc(9%)
@media (min-width: 1170px) and (max-width: 2048px)
  .our-strength
    &__container
      min-height 420px
    &__item
      flex: 0 1 19%
    &__title--mobile
      display none
    &__nav
      justify-content space-around
      min-height 200px
    .icon
      &-skyline,
      &-house-key,
      &-placeholder,
      &-contract    
        size(65px, 55px)
    .container-icon
      padding-right 10px

    
    



        