.border 
  display block
  size(70px, 2px)
  background-color #cc0000
  margin: 14px auto 21px
  text-align center
.icon
  &-skyline,
  &-house-key,
  &-placeholder,
  &-contract
    fill #000030
@media (min-width: 320px) and (max-width: 479px)
  .our-strength
    &__item
      flex 0 1 49% 
@media (min-width: 320px) and (max-width: 767px)
  .our-strength
    &__title
      display none
      &--mobile
        font-family PtFont
        font-weight normal
        font-size 28px
        padding-top 50px
    &__nav
      margin-top 30px
      justify-content space-between
      min-height 370px
    &__item
      p 
        font-size 15px
  .icon
    &-skyline,
    &-house-key,
    &-placeholder,
    &-contract
      size(55px, 60px)
@media (min-width: 451px) and (max-width: 500px)
  .our-strength
    margin-top -75px
@media (min-width: 480px) and (max-width: 767px)
  .our-strength
    &__item
      flex 0 1 35%
    &__nav
      justify-content space-around
@media (min-width: 768px) and (max-width: 1169px)                            
  .our-strength
    &__container
      min-height 450px
    &__item
      display flex
      flex: 0 1 45%
    &__title--mobile
      display none
    &__nav
      justify-content space-around
      min-height 200px
    .icon
      &-skyline,
      &-house-key,
      &-placeholder,
      &-contract    
        size(65px, 55px)
    .container-icon
      padding-right 10px
@media (min-width: 860px) and (max-width: 2048px)
  .our-strength
    &__item
      flex: 0 1 19%
    &__title--mobile
