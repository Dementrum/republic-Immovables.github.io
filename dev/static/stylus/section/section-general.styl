.container-desc
  align-self center
  transform: translateY(11%)
.section
  height 100%
  overflow hidden
.general
  display flex
  flex-direction: row
  // background-color #fec388
  // background-image url(../img/content/city.jpg)
  background-repeat no-repeat
  background-size cover
  min-height 100vh
  min-width 300px
  
  &-title
    font-family PtFont
  &-desc
    margin-top 30px
    max-width: 80%
    font-size 24px
    line-height 32px
    &__mobile
      font-size 20px
  &-button
    display inline-block
    margin-top 50px
    cursor pointer
    border none
    background-image: linear-gradient(to top, #990000 0%, #cc0000 100%)
    &__link
      font-size: 18px
      font-weight 600
      color: #fff
    &:hover
      background-color #cc0000
      background-image none
    &:active
      background-color #a31c1d
      background-image none
@media (min-width: 320px) and (max-width: 420px)
  .general
    background-image url(../img/content/city-mobile.jpg)
@media (min-width: 767px) and (max-width: 920px)
  .general
    background-position bottom -87px left 0
    min-height 670px
@media (min-width: 921px)
  .general
    min-height 870px
@media (max-width: 336px)
  .general-title 
    .title 
      font-size 28px 
@media (min-width: 337px) and (max-width: 768px)
  .general-title .title 
      font-size 30px
@media (max-width: 559px) 
  .general-title
    .title
      text-align center
  .container-desc
    max-width 300px
@media(min-width: 560px) and (max-width: 767px) 
  .container-desc
    max-width 425px
    padding-left 20px
  .general-title
      .title
        text-align left
@media (max-width: 767px) 
  .general
    &-desc__mobile
      display none
    &-button
      padding 22px 60px
@media (min-width: 768px) and (max-width: 1169px) 
  .general
    &-title
      .title
        font-size 40px
    &-desc
      display none
    &-button
      padding 20px 60px
      margin-top 0
  .container-desc
    max-width 540px
    min-height 245px
    display flex
    flex-direction column
    align-items flex-start
    justify-content space-between
@media (max-width: 980px) 
  .general
    min-height: 570px
@media (min-width: 1170px)
  .general
    &-title
      .title
        font-size 48px
    &-desc
      &__mobile
        display none
    &-button
      padding 25px 72px 
  .container-desc
    max-width 650px
