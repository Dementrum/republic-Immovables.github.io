@import 'fonts.styl'
@import 'vars.styl'
@import 'libs.styl'
@import 'utils/mixins.styl'

html
	line-height 1.3
	font-size 16px


body
	font-family mainFont
	color text
	font-size 16px


ul,li
	margin 0
	padding 0
	list-style-type none

p
	margin 0

a
	text-decoration none
	color #fff

h1, h2, h3, h4, h5, h6
	margin 0
	padding 0

h1
	font-size rem(48, baseFont)
	font-weight normal

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle


textarea
	resize none


section
	position relative


input,
select,
button
	outline none


*, *:before, *:after
	box-sizing border-box


