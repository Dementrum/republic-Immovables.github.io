footer 
  min-height 270px
  color #fff
.welcome-text
    display flex
    flex-direction row
    justify-content space-between
    margin-top: 55px
.footer
  &-logo
    flex 0 1 24%
    .logo
        display flex
        background-repeat no-repeat
        background-size contain
        min-height 90px
        min-width 230px

.welcome-desc
  display flex
  flex-direction  row
  justify-content space-between
  align-items flex-end
.address
  flex 0 1 24%
  font-style: normal
  font-size 18px
  font-weight 400
  line-height 1.7
  margin-right: 70px
 
.footer-contacts
  h3
    font-size 24px
    font-weight 600
  &__title
    margin-top 25px
.footer-phone
  font-size 26px
  font-weight 600
  margin-top 25px

.footer-list
  display flex
  flex-direction: row
  font-size: 18px
  font-weight: 400
  line-height 1.7

.footer-office__list
  margin-right: 70px
  