.welcome
	&__container
			background-color maroon
	&_header
			max-width 1200px
			width 100%
			margin 0 auto
			row(flex-start, center)
    
.header
	&-logo
			max-width 100%
			height auto
			margin-right 45px
			.logo
					display flex
					background-repeat no-repeat
					background-position left center
					background-size contain
					min-height 90px
					min-width 230px
			&--img
				absolute(0, 0, 0, 88%)
	&-phone
		flex 0 1 20%
		margin-top: 16px
		.phone
			display block
			font-size 22px
			color #f3dc9d
			font-weight 600
			text-align center
			p
				color #fff
				font-size 14px
				text-decoration underline
				line-height 1.4
	&__nav
		&-container
			flex 0 1 48%
		.nav-list
			display flex
			justify-content space-between
			font-size 16px
		
			&__link
				color #fff
				font-family  mainFont


		 
    

     