.welcome
	&__container
		background-color maroon
	&_header
		max-width 1200px
		width 100%
		margin 0 auto
		flex 0 1 100%
		row(flex-start, center)
		flex-wrap wrap
		relative()
.header
	&-logo
			max-width 100%
			height auto
			flex 0 1 24%
			.logo
					display flex
					background-repeat no-repeat
					background-position left center
					background-size contain
					min-height 90px
					min-width 230px
			&--img
				absolute(0, 0, 0)
				z-index 1
	&-phone
		flex 0 1 20%
		margin-top: 16px
		.phone
			display block
			font-size 22px
			color #f3dc9d
			font-weight 600
			text-align center
			p
				color #fff
				font-size 14px
				text-decoration underline
				line-height 1.4
	&__nav
		&-container
			flex 0 1 45%
			z-index 1
			relative()
		.nav-list
			display flex
			justify-content space-between
			font-size 16px
			&__item
				margin-right 10px
				&:last-child
					margin-right 0
			&__link
				color #fff
				font-family  mainFont
.header
	&-nav__soc
		absolute(6px, -50px)
		z-index -1

.nav-soc
	display flex
	align-items: center
	
	&__item
		margin 5px 5px 0 0
		line-height 0
		&:last-child
			margin-top: -1px;

	&__link
		font-size 18px
		color #fff
		svg
			width 95px
			height 48px



		 
    

     