.fixed
	fixed()
	width 100%
	z-index 2

.scrolled
	height 400px
	max-width 130px
	display: flex
	flex-direction: column
	margin 20px
	opacity 0.8
	.welcome-logo
		display flex
		flex-direction: column
	.header
		&-logo
			flex 0 1 36%
			.logo
				opacity 0
		&-logo--img 
			absolute(0, 0)
			z-index 0
		&-phone
			display flex
			padding-top: 30px
			flex-direction column
			z-index 1
			.phone
				font-size 14px
	.nav-list
		display flex
		flex-direction: column
		&__link
			padding 5px 0 5px 0
			font-size: 15px
			&.active
				text-decoration underline
			&.active::after
				display none
	
	.header__nav
		display flex
		text-align: center
		&-container
			display flex
			flex 0 1 35%
			padding-left: 5px;
	.header-nav__soc
		top 95%
		left 18%
	
.welcome
	&__container
		background-color maroon
	&-logo
		flex 0 1 100%
		flex-wrap wrap
		relative()
.header
	&-logo
		max-width 100%
		height auto
		flex 0 1 24%
		.logo
				display flex
				background-repeat no-repeat
				background-position left center
				background-size contain
				margin: 9px 0 9px 0
		&--img
			absolute(0, 0, 0)
			z-index 1
	&-phone
		// flex 0 1 20%
		// 
		a
			color #fff
			font-size 14px
			text-decoration underline
			line-height 1.4
			display block
			text-align center
		.phone
			display block
			font-size 22px
			color #f3dc9d
			font-weight 600
			text-align center
	
	&__nav
		&-container
			flex 0 1 45%
			z-index 1
			relative()
		.nav-list
			display flex
			justify-content space-between
			font-size 16px
			&__item
				margin-right 10px
				&:last-child
					margin-right 0
			&__link
				color #fff
				font-family  mainFont

	&-nav__soc
		absolute(6px, -50px)
		z-index -1

.nav-soc
	display flex
	align-items: center
	
	&__item
		margin 5px 5px 0 0
		line-height 0
		&:last-child
			margin-top: -1px;

	&__link
		font-size 18px
		color #fff
		svg
			width 95px
			height 48px
			fill #fff
		.icon-vk
			width 20px
			padding-top 5px

.nav-list__link
	padding: 35px 0 35px 0
	&.active
		color: #fdf8b4
	&.active::after
		content ''
		display block
		width 100%
		height 1px
		text-decoration underline
		background #fdf8b4
		
.nav-list__item:last-child 
	.nav-list__link 
		padding 0

// Style for svg sandwich
.ham 
	cursor: pointer;
	-webkit-tap-highlight-color: transparent;
	transition: transform 600ms;
	-moz-user-select: none;
	-webkit-user-select: none;
	-ms-user-select: none;
	user-select: none;

.line 
	fill none
	transition stroke-dasharray 600ms, stroke-dashoffset 600ms
	stroke #fff
	stroke-width 5.5
	stroke-linecap round

.ham6 .top 
	stroke-dasharray 40 172

.ham6 .middle 
	stroke-dasharray 40 111

.ham6 .bottom 
	stroke-dasharray 40 172

.ham6.active .top 
	stroke-dashoffset -132px

.ham6.active .middle  
	stroke-dashoffset  -71px 
 
.ham6.active .bottom 
	stroke-dashoffset: -132px 
//media
@media (max-width: 559px) 
	.welcome-logo
		row(center, center)
	.header-phone
		display none

@media (max-width: 940px)
	.header-logo
		&--img
			display none
		.logo
			min-height 64px
			min-width 200px

@media (min-width: 320px) and (max-width: 559px) 
	.welcome-logo
		row(space-between, center)
	
@media (min-width: 560px) and (max-width: 767px) 
	.welcome-logo
		row(space-around, center)

@media (min-width: 559px) and (max-width: 767px) 
	.header-phone
		flex: 0 1 35%
		margin: 0px 10px 0 -20px

@media (min-width: 768px) and (max-width: 1029px) 
	.header
		&-phone
			padding 0 110px
		&-logo--img
			padding-right 40px



@media (min-width: 1029px) and (max-width: 2049px)
	.sandwich 
			display: none

@media(min-width: 260px) and (max-width: 1030px) 
	.header__nav-container
		display none

@media (min-width: 768px) and (max-width: 2048px)
	.header-logo
		// &--img
