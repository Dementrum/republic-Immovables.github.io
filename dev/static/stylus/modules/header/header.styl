.fixed
	fixed()
	width 100%
	z-index 2

.scrolled
	.welcome-logo
		display flex
		flex-direction: row
		min-height: 60px
	.logo
		min-height 56px
		margin 0
		transition: all 0.3s
	.header
		&-logo
			flex 0 1 5%
		&-logo--img 
			display none
		&-phone
			display flex
			flex-direction row
			z-index 1
			flex-direction: row-reverse
			padding-top 0
			flex: 0 28.5%
			padding-left 16px
			justify-content space-around
			.consult
				text-decoration none
				&:focus
					text-decoration underline
			.phone
				font-size 14px
		&-nav__soc
			display none
.welcome
	&__container
		background-color maroon
	&-logo
		flex 0 1 100%
		flex-wrap wrap
		relative()
		align-items: center
		min-height 90px
.header
	&-logo
		max-width 100%
		height auto
		flex 0 1 20%
		.logo
			display flex
			background-repeat no-repeat
			background-position left center
			background-size contain
			margin: 9px 0 9px 0
		&--img
			absolute(0, 0, 0)
			z-index 1
	&-phone
		padding-top 21px
		a
			color #fff
			line-height 1.4
			display block
			text-align center
		.phone
			display block
			color #f3dc9d
			font-weight 600
			text-align center
		.consult
			text-decoration underline
			font-size 14px
	&__nav
		.mobile-nav
			position absolute
		&-container
			flex 0 1 45%
			z-index 1
			relative()
		.nav-list
			display flex
			justify-content space-between
			font-size 16px
			&__item
				margin-right 10px
				&:last-child
					margin-right 0
			&__link
				color #fff
				font-family  mainFont
				outline none
	&-nav__soc
		absolute(6px, -50px)
		z-index -1

.nav-soc
	display flex
	align-items: center
	
	&__item
		margin 5px 5px 0 0
		line-height 0
		&:last-child
			margin-top: -1px;

	&__link
		font-size 18px
		color #fff
		svg
			width 95px
			height 48px
			fill #fff
		.icon-vk
			width 20px
			padding-top 5px

.nav-list__link
	padding: 35px 0 35px 0
	&.active
		color: #fdf8b4
	&.active::after
		content ''
		display block
		width 100%
		height 1px
		text-decoration underline
		background #fdf8b4
		
.nav-list__item:last-child 
	.nav-list__link 
		padding 0

// Style for svg sandwich
.mobile
	max-width: 230px
	min-height 320px
	background #fff
	padding-left 25px
	absolute($top: 0, $left: 0)
	&-nav
		display flex
		flex-direction: row
		justify-content space-between
		flex-wrap wrap
		max-width 75%
		min-height 130px
		
	.header-nav__soc
		position relative
		right 0
		top 0
		display block
		z-index: 1
	.header-phone
		display flex
		flex-direction: column
		order -1
		.phone
			color #993333
			text-align left
		.consult 
			color #000
			text-align left
			padding 25px 0
	&-nav__link
		color: #000033
		font-size: 14px
	.icon
		&-vk
			fill #000033
		&-avito
			fill #000033
	.nav-soc__link
		margin-right 25px

.sandwich
	position relative
	cursor pointer
.ham 
	cursor: pointer;
	-webkit-tap-highlight-color: transparent;
	transition: transform 600ms;
	-moz-user-select: none;
	-webkit-user-select: none;
	-ms-user-select: none;
	user-select: none;

.line 
	fill none
	transition stroke-dasharray 600ms, stroke-dashoffset 600ms
	stroke #fff
	stroke-width 5.5
	stroke-linecap round

.ham6 .top 
	stroke-dasharray 40 172

.ham6 .middle 
	stroke-dasharray 40 111

.ham6 .bottom 
	stroke-dasharray 40 172

.ham6.active .top 
	stroke-dashoffset -132px

.ham6.active .middle  
	stroke-dashoffset  -71px 
 
.ham6.active .bottom 
	stroke-dashoffset: -132px 
//media
@media (min-width: 320px) and (max-width: 767px)
	.header-nav__soc 
		.general-desc 
			display none  
		.general-button 
			margin-top 40px
  
@media (max-width: 920px) 
	.header__nav-container
		display none
	.general-desc 
			display: none
@media (max-width: 1199px) 
	.header-phone
		.phone
			font-size 20px
	.welcome-logo
		row(space-between, center)
@media (max-width: 559px) 
	.header-phone
		display none
	
@media (min-width: 559px) and (max-width: 767px) 
	.welcome-logo
		row(space-around, center)
	.header
		&-phone
				flex: 0 1 40%
			.phone
				font-size 18px
@media (max-width: 767px)
	.header-logo
		&--img
			display none
	

@media (min-width: 768px) and (max-width: 920px) 
	.header
		&-phone
			flex 0 1 39%
	.sandwich
		flex 0 1 24%
		margin 0 auto
@media (min-width: 840px) and (max-width: 920px) 
	.header
		&-logo--img
			padding-left 40px
@media (min-width: 921px) and (max-width: 1199px) 
	.header
		&__nav-container
			flex: 0 1 47%
		&-phone 
			.phone
				font-size 18px
		&-logo--img
			display none
@media (min-width: 921px) and (max-width: 2048px) 
	.sandwich
		display none
	.mobile
		display none
@media (max-width: 940px)
	.logo
		min-height 64px
		min-width 200px
	.mobile
		display none
@media (min-width: 941px) and (max-width: 2048px)
	.logo
		min-height 72px
		min-width 226px
		transition: all 0.3s
@media (min-width: 979px) and (max-width: 2048px)
	.header-phone
		flex 0 25.5%

@media (min-width: 1201px) and (max-width: 2048px)
	.welcome-logo
		align-items: center
	.header-phone
		.phone
			font-size 22px






	







