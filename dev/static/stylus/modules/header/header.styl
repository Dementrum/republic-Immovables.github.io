.welcome
	&__container
			background-color maroon
	&_header
			max-width 1200px
			width 100%
			margin 0 auto
			row(flex-start, center)
    
.header
	&-logo
			max-width 100%
			height auto
			margin-right 45px
			.logo
					display flex
					background-repeat no-repeat
					background-position left center
					background-size contain
					min-height 90px
					min-width 230px
	&__nav
		.nav-list
			display flex
			justify-content space-between
			font-size 16px
			min-width 550px
			&__link
				color #fff
				font-family  mainFont
		 
    

     