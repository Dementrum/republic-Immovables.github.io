.overlay 
  position: fixed;
  display: none;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 3;
.overlay .popup 
  position: fixed;
  color: #000;
  background: #fff;
  z-index: 4;
  transform: translate(-50%, -50%)
  padding: 50px 10px;
  position relative
  display: flex
  flex-direction: column
  left: 50%;
  top 41%
  
.overlay .popup-close 
  cursor: pointer
  margin-left: auto
  size(15px)
  position absolute
  right 5%
  top 5%
.overlay .popup-title 
  display: block
  color: #000
  font-size: 20px
  font-weight: 500
  text-align: center
  
.overlay .popup-text 
  display: block
  margin-top: 23px
  line-height 1.5
.icon-close
  size(15px)
  fill #000033
@media (min-width: 320px) and (max-width: 630px)
  .popup-title 
    span:last-child
      display block
  .overlay .popup 
    justify-content: space-around
    max-width 500px
    min-height: 32%
  .overlay .popup-text 
    text-align: center
    span
      display block
  .overlay .popup-title 
    font-size: 20px
@media (min-width: 631px) and (max-width: 768px)
  .overlay .popup 
    justify-content: center
    max-width 95%
    min-height: 38%
    
  .overlay .popup-text 
    text-align: center
    margin-top: 14px
    span:first-child
      display block
      line-height 1.5
  .overlay .popup-title 
    font-size: 30px