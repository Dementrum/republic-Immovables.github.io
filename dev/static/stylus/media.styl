@media (min-width: 320px) and (max-width: 767px) {
  .header-nav__soc {
    display none
  }
  .general-desc {
    display none
  }
  .general-button {
    margin-top 40px
  }
  .our-services__left {
    flex: 0 1 27%
    min-height 570px
  }
  .our-services__right {
   margin 0 auto 
  }
  .nav-list-services {
    padding 0
    justify-content: space-around
  }
  .services-list {
    transform: translate(-13%, 70%)
  }
}
